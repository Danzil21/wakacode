{
  "name": "wakacode",
  "displayName": "Wakacode",
  "description": "A simple time tracking extension for VS Code - track your coding activity",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "wakacode.showStats",
        "title": "Wakacode: Show Statistics"
      },
      {
        "command": "wakacode.resetStats",
        "title": "Wakacode: Reset Statistics"
      },
      {
        "command": "wakacode.showToday",
        "title": "Wakacode: Show Today's Activity"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  }
}
